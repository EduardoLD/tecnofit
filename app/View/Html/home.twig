{% include 'estrutura.html' %}

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #1c1e21 40%, #3a3e47);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Garantir que a altura mínima seja 100% da altura da tela */
        text-align: center;
        overflow: hidden; /* Evita o scroll vertical */
    }

    h1 {
        color: #ffeb3b;
        font-family: 'Trebuchet MS', sans-serif;
        margin: 20px 0;
        font-size: 2em;
    }

    p {
        color: #ccc;
        font-size: 1.2em;
        margin: 10px 20px;
        max-width: 100%;
        word-wrap: break-word; /* Garante que o texto longo não saia da tela */
    }

    button {
        font-size: 1em;
        padding: 10px 20px;
        margin-top: 20px;
        background-color: #ffeb3b;
        color: #333;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    button:hover {
        background-color: #fdd835;
        color: #fff;
    }

    .image-container {
        margin: 20px 0;
        max-width: 100%;
    }

    .image-container img {
        max-width: 100%;
        height: auto;
    }

    /* Media query para dispositivos menores */
    @media (max-width: 768px) {
        h1 {
            font-size: 1.5em;
        }

        p {
            font-size: 1em;
        }

        button {
            padding: 8px 16px;
        }
    }

    @media (max-width: 480px) {
        h1 {
            font-size: 1.2em;
        }

        p {
            font-size: 0.9em;
        }

        button {
            font-size: 0.9em;
            padding: 6px 12px;
        }
    }
</style>

<script src="app/View/js/home.js"></script>

<div class="image-container">
    <img src="app/View/Img/tecnofit.png" alt="Tecnofit">
</div>

